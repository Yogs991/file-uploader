<head>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav>
        <% if(user){ %>
            <p>Welcome 
                <span>
                    <img id="person-icon" src="/person.png" alt="user icon">
                </span>
                <%= user.name %>
            </p>
            <form action="/log-out" method="POST">
                <button type="submit">Logout</button>
            </form>
        <% } else{%>
            <div class="buttons">
                <a href="/log-in">Log In</a>
                <a href="/sign-up">Sign Up</a>
            </div>
        <% } %>    
    </nav>
</body>