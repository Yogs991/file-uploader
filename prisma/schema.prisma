generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User{
  id          Int       @id   @default(autoincrement())
  email       String    @unique
  password    String
  name        String?
  files       File[]
  folder      Folder[]
}

model File{
  id          Int         @id   @default(autoincrement())
  title       String
  link        String?
  size        Int
  createdAt   DateTime    @default(now())
  uploader    User @relation(fields: [uploaderId], references: [id])
  uploaderId  Int
  folder      Folder @relation(fields: [folderId], references: [id])
  folderId    Int
}

model Folder{
  id          Int   @id   @default(autoincrement())
  name        String
  createdAt   DateTime    @default(now())
  owner       User @relation(fields:[ownerId], references: [id])
  ownerId     Int

  files File[]

  @@unique([ownerId, name])
}

model Session{
  id          String @id
  sid         String @unique
  data        String
  expiresAt   DateTime
}
